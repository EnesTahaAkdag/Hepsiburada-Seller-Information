@model List<Hepsiburada_Seller_Information.Models.Seller_Information>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Hepsiburada Satıcı Bilgileri</h1>

<table class="table table-bordered" id="tblBilgiler">
    <thead>
        <tr style="text-align:center;">
            <th style="vertical-align:middle;">Id</th>
            <th style="vertical-align:middle;">Link</th>
            <th style="vertical-align:middle;">Mağaza Adı</th>
            <th style="vertical-align:middle;">Telefon</th>
            <th style="vertical-align:middle;">Email</th>
            <th style="vertical-align:middle;">Adres</th>
            <th style="vertical-align:middle;">Fax</th>
            <th style="vertical-align:middle;">Mersis</th>
            <th style="vertical-align:middle;">Kategori</th>
            <th style="vertical-align:middle;">Mağaza Skoru</th>
            <th style="vertical-align:middle;">Derecelendirme Sayısı</th>
            <th style="vertical-align:middle;">Takipçi Sayısı</th>
            <th style="vertical-align:middle;">Ortalama Teslimat Süresi</th>
            <th style="vertical-align:middle;">Yanıt Süresi</th>
            <th style="vertical-align:middle;">Derecelendirme Puanı</th>
            <th style="vertical-align:middle;">Yorum Sayısı</th>
            <th style="vertical-align:middle;">Hızlı Satıcı</th>
            <th style="vertical-align:middle;">Ürün Sayısı</th>
            <th style="vertical-align:middle;">Satıcı İsmi</th>
            <th style="vertical-align:middle;">VKN</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var infos in Model)
        {
            <tr style="text-align:center;">
                <td style="vertical-align:middle;">@infos.ID</td>
                <td style="vertical-align:middle;">@infos.Link</td>
                <td style="vertical-align:middle;">@infos.StoreName</td>
                <td style="vertical-align:middle;">@infos.Telephone</td>
                <td style="vertical-align:middle;">@infos.Email</td>
                <td style="vertical-align:middle;">@infos.Address</td>
                <td style="vertical-align:middle;">@infos.Fax</td>
                <td style="vertical-align:middle;">@infos.Mersis</td>
                <td style="vertical-align:middle;">@infos.Category</td>
                <td style="vertical-align:middle;">@infos.StoreScore</td>
                <td style="vertical-align:middle;">@infos.NumberOfRatings</td>
                <td style="vertical-align:middle;">@infos.NumberOfFollowers</td>
                <td style="vertical-align:middle;">@infos.AverageDeliveryTime</td>
                <td style="vertical-align:middle;">@infos.ResponseTime</td>
                <td style="vertical-align:middle;">@infos.RatingScore</td>
                <td style="vertical-align:middle;">@infos.NumberOfComments</td>
                <td style="vertical-align:middle;">@infos.FastSaller</td>
                <td style="vertical-align:middle;">@infos.NumberOfProducts</td>
                <td style="vertical-align:middle;">@infos.SellerName</td>
                <td style="vertical-align:middle;">@infos.VKN</td>
            </tr>
        }
    </tbody>
</table>
